<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.jaipurheights.rar.Propertyshown"
    tools:showIn="@layout/activity_propertyshown">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="io.jaipurheights.rar.Form"
        android:background="#eeeeee">
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            xmlns:android="http://schemas.android.com/apk/res/android" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/lesseName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:background="#fafafa"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/lessePhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fafafa"
                        android:ems="10"
                        android:hint="Phone No."
                        android:inputType="phone"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fafafa"
                        android:ems="10"
                        android:hint="Email Id"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >
                    <EditText
                        android:id="@+id/lesseAddress2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fafafa"
                        android:ems="10"
                        android:hint="1.Premises Shown"
                        android:paddingLeft="10dp"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/lesseBudget2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:ems="10"
                        android:hint="Rate"
                        android:background="#fafafa"
                        android:inputType="number" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >
                    <EditText
                        android:id="@+id/lesseAddress3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fafafa"
                        android:ems="10"
                        android:hint="2.Premises Shown"
                        android:paddingLeft="10dp"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/lesseBudget3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:ems="10"
                        android:hint="Rate"
                        android:background="#fafafa"
                        android:inputType="number" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >
                    <EditText
                        android:id="@+id/lesseAddress4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fafafa"
                        android:ems="10"
                        android:hint="3.Premises Shown"
                        android:paddingLeft="10dp"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/lesseBudget4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:ems="10"
                        android:hint="Rate"
                        android:background="#fafafa"
                        android:inputType="number" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >
                    <EditText
                        android:id="@+id/lesseAddress5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fafafa"
                        android:ems="10"
                        android:hint="4.Premises Shown"
                        android:paddingLeft="10dp"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fafafa"
                    >

                    <EditText
                        android:id="@+id/lesseBudget5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:ems="10"
                        android:hint="Rate"
                        android:background="#fafafa"
                        android:inputType="number" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:background="#fafafa"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lesseSignatureView"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"

                    android:orientation="horizontal"
                    android:weightSum="9.5"
                    android:background="#eeeeee"
                    >


                    <Button
                        android:layout_weight="4.5"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Sign"
                        android:id="@+id/addSig"
                        android:background="#1976d2"
                        />
                    <LinearLayout
                        android:layout_weight="0.50"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        />
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_weight="4.5"
                        android:id="@+id/lesseSubmit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Send"
                        android:background="#1976d2"
                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
