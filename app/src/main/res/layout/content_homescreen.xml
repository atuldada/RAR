<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
   tools:context="io.jaipurheights.rar.Homescreen"
    tools:showIn="@layout/app_bar_homescreen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/adv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/adv"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:weightSum="4.5">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"

        >
        <com.andexert.library.RippleView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_alpha="250"
            app:rv_color="#1976d2"
            app:rv_zoom="true"
            app:rv_rippleDuration="150"
            app:rv_zoomScale="1.15"
            rv_centered="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/inf"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
       <TextView

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="\nRAR\nINFORMATION"
           android:textSize="10dp"
           android:gravity="bottom|center"
           android:paddingBottom="10dp"

           />
                </LinearLayout>
            </LinearLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/android_verticaldivider_home"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/formreq"
        >
        <com.andexert.library.RippleView
            android:id="@+id/more2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_alpha="250"
            app:rv_color="#1976d2"
            app:rv_zoom="true"
            app:rv_rippleDuration="150"
            rv_centered="true"
            app:rv_zoomScale="1.15"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/requi"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Post\nRequirement"
            android:textSize="10dp"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            />
            </LinearLayout>
            </LinearLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/android_verticaldivider_home"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <com.andexert.library.RippleView
            android:id="@+id/more3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_alpha="250"
            app:rv_color="#1976d2"
            app:rv_zoom="true"
            rv_centered="true"
            app:rv_rippleDuration="150"
            app:rv_zoomScale="1.15"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/requi"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Post\nProperty"
            android:textSize="10dp"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"

            />
                </LinearLayout>
            </LinearLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search"
            android:textColor="@android:color/white"
            android:background="#1976d2"/>

    </LinearLayout>
</LinearLayout>
</RelativeLayout>

