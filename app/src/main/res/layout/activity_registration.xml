

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="io.startuplabs.intervueguru.UserRegistrationActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#caccce">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RAR"
            android:id="@+id/textView3"
            android:layout_marginTop="39dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#1565c0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:clickable="true"
            android:textColor="#1565c0"
            android:id="@+id/textView7"
            android:layout_gravity="right|top"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ScrollView android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

        <LinearLayout android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center"
            android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/registerEmail"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="youremail@example.com"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext_reg"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/rounded_edittext_reg"
            android:id="@+id/registerName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/registerEm"
            android:textCursorDrawable="@null"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:hint="Your name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/registerPassword"
            android:layout_below="@+id/registerName"
            android:background="@drawable/rounded_edittext_reg"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:hint="Password"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

         <!--   <Spinner
                android:drawSelectorOnTop="true"
                android:id="@+id/registerCountryCode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundd_edittext_password"
                >
            </Spinner>
-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editText1"
                android:hint="Your mobile no"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:textCursorDrawable="@null"
                android:background="@drawable/rounded_edittext_reg"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/registerButton"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already registered? Login"
                android:id="@+id/registerLoginButton"
                android:layout_marginTop="20dp"
                android:textColor="#1565c0"
                android:clickable="true"
                android:layout_centerHorizontal="true" />

</LinearLayout>
        </ScrollView>


    </RelativeLayout>
